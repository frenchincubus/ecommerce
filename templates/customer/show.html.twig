{% extends 'admin/admin_home.html.twig' %}

{% block title %}Customer{% endblock %}

{% block body %}
    <h1>Customer</h1>
    <div class="row">
        <div class="col text-left" style="padding:10px;"><a href="{{ path('customer_index') }}" class="btn btn-secondary" style="margin-right:10px;"><i class="material-icons align-bottom">keyboard_arrow_left</i>Retour à la liste</a></div>        
        <div class="col text-right" style="padding:10px;"><a href="{{ path('customer_edit', {'id': customer.id}) }}" class="btn btn-warning">Modifier</a></div>       
    </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ customer.id }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ customer.firstname }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ customer.lastname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ customer.email }}</td>
            </tr>
            <tr>
                <th>Date de naissance</th>
                <td>{{ customer.birthdate ? customer.birthdate|format_datetime('short', 'none', locale='fr') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="col text-right" style="padding:10px;"><p>{{ include('customer/_delete_form.html.twig') }}</p></div>
{% endblock %}
