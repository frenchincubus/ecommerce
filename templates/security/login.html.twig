{% extends "base.html.twig" %}

{% block body %}

    <div class="container">
        <h2>Connectez-vous</h2>
        <form action="{{ path('security_login') }}" method="post">
            <div class="form-group">
                <input type="email" placeholder="email" required name="_username" >
            </div>
            <div class="form-group">
                <input type="password" placeholder="password" required name="_password" >
            </div>
            <div class="form-group">
                <input type="submit" name="submit" value="Connexion">
            </div>
        </form>
        <div>Pas de compte ? <a href="{{ path('security_registration') }}">Nouveau compte</a></div>
    </div>

{% endblock %}