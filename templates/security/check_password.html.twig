{% extends "base.html.twig" %}
{% block body %}
    <div class="container">
        {% for message in app.flashes('failure') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
        <h2>Ancien mot de passe</h2>
        <form action="{{ path('check_password') }}" method="post">            
            <div class="form-group">
                <input type="password" placeholder="votre ancien mot de passe" required name="password" >
            </div>
            <div class="form-group">
                <input type="submit" name="submit" value="valider">
            </div>
        </form>
    </div>
{% endblock %}