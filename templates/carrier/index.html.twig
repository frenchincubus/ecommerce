{% extends 'admin/admin_home.html.twig' %}

{% block title %}Transporteurs{% endblock %}

{% block body %}
    <h1>Liste des transporteurs</h1>

    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for carrier in carriers %}
            <tr>
                <td>{{ carrier.id }}</td>
                <td>{{ carrier.name }}</td>
                <td>
                    <a href="{{ path('carrier_show', {'id': carrier.id}) }}" class="btn btn-primary material-icons" >visibility</a>
                    <a href="{{ path('carrier_edit', {'id': carrier.id}) }}" class="btn btn-warning material-icons">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('carrier_new') }}" class="btn btn-success"><i class="material-icons align-bottom">add</i>Nouveau transporteur</a>
{% endblock %}
