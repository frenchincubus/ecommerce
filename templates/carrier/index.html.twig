{% extends 'base.html.twig' %}

{% block title %}Carrier index{% endblock %}

{% block body %}
    <h1>Carrier index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for carrier in carriers %}
            <tr>
                <td>{{ carrier.id }}</td>
                <td>{{ carrier.name }}</td>
                <td>
                    <a href="{{ path('carrier_show', {'id': carrier.id}) }}">show</a>
                    <a href="{{ path('carrier_edit', {'id': carrier.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('carrier_new') }}">Create new</a>
{% endblock %}
