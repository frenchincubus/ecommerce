{% extends 'base.html.twig' %}

{% block title %}WeightRange index{% endblock %}

{% block body %}
    <h1>WeightRange index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Min</th>
                <th>Max</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for weight_range in weight_ranges %}
            <tr>
                <td>{{ weight_range.id }}</td>
                <td>{{ weight_range.min }}</td>
                <td>{{ weight_range.max }}</td>
                <td>{{ weight_range.price }}</td>
                <td>
                    <a href="{{ path('weight_range_show', {'id': weight_range.id}) }}">show</a>
                    <a href="{{ path('weight_range_edit', {'id': weight_range.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('weight_range_new') }}">Create new</a>
{% endblock %}
