{% extends 'admin/admin_home.html.twig' %}

{% block title %}Manufacturer index{% endblock %}

{% block body %}
    <h1>Manufacturer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Country</th>
                <th>Address</th>
                <th>Logo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for manufacturer in manufacturers %}
            <tr>
                <td>{{ manufacturer.id }}</td>
                <td>{{ manufacturer.name }}</td>
                <td>{{ manufacturer.description }}</td>
                <td>{{ manufacturer.country }}</td>
                <td>{{ manufacturer.address }}</td>
                <td>{{ manufacturer.logo }}</td>
                <td>
                    <a href="{{ path('manufacturer_show', {'id': manufacturer.id}) }}">show</a>
                    <a href="{{ path('manufacturer_edit', {'id': manufacturer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('manufacturer_new') }}">Create new</a>
{% endblock %}
