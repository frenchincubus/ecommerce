{% extends 'base.html.twig' %}

{% block title %}CartProducts index{% endblock %}

{% block body %}
    <h1>CartProducts index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantity</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cart_product in cart_products %}
            <tr>
                <td>{{ cart_product.id }}</td>
                <td>{{ cart_product.quantity }}</td>
                <td>{{ cart_product.date ? cart_product.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('cart_products_show', {'id': cart_product.id}) }}">show</a>
                    <a href="{{ path('cart_products_edit', {'id': cart_product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('cart_products_new') }}">Create new</a>
{% endblock %}
