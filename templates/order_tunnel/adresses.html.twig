{% extends "order_tunnel/base.html.twig" %}

{% block body %}
    <h2>Choix de l'adresse</h2>

    <div class="container">
        {% for message in app.flashes('notice') %}
            <div class="flash-notice alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
        <form action="{{ path('order_tunnel_addresses')}}" method="post">
            <div style="height:500px;justify-content:center;display:flex;flex-direction:column;">
                {% for addresse in addresses %}
                <div class="form-group" style="border:1px solid black;justify-content:center;height:50px;">
                    <input type="radio" id="adresse{{ addresse.id }}" name="adresse" value="{{ addresse.id }}" style="width:50px;height:20px;">
                    <label for="adresse{{ addresse.id }}" style="border-left:1px solid black;">                        
                        {{ addresse.streetNumber ~ " " ~ addresse.address ~ " " ~ addresse.zipcode ~ " " ~ addresse.city ~ " " ~ addresse.country }}
                    </label>
                </div>
                {% endfor %}
            </div>
            <div class="text-right">
                <input type="submit" name="submit" class="btn btn-success" value="Choisir">
            </div>
        </form>
    </div>
{% endblock %}