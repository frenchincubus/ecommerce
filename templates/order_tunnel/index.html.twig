{% extends 'base.html.twig' %}

{% block title %}Shopping cart{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
        {% if cart.cartProducts is not empty %}
            {% for product in cart.cartProducts %}
                        <table class="table" style="width:100%">
                        <thead>
                                <tr>
                                    <th>Produit</th><th>Quantité</th><th class="text-right">Total</th>
                                </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><a href="{{ path('category_product_show', {'id': product.product.id}) }}">{{ product.product.name }}</a></td>
                                <td>
                                    x {{ product.quantity }} {{ " " }}
                                    <div class="btn-group" role="group">
                                        <button type="button" class="btn btn-secondary">+</button>
                                        <button type="button" class="btn btn-secondary">-</button>
                                    </div>
                                </td>
                                <td class="text-right">{{ (product.product.ttcPrice * product.quantity) | number_format(2, ',', ' ') }} €</td>
                                <td><a href="{{ path('remove_product', { 'id': product.id}) }}">X</a></td>
                            </tr>
                    {% endfor %}
                            <tr><td colspan="2" class="text-right">Total</td><td class="text-right">{{ cart.totalPrice | number_format(2, ',', ' ') }} €</td></tr>
                        </tbody>
                    </table>
        {% else %}
        <div>Panier vide !</div>
        {% endif %}
        </div>
    </div>
{% endblock %}
